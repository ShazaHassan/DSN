<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/L1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/none"
    android:orientation="vertical"
    tools:context="com.example.android.dsn.HODForStudent">


































    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TvHOD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="HOD"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:textStyle="italic" />

        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/BmessageHOD"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@android:drawable/checkbox_off_background"
                android:onClick="messageToHOD"
                android:text="Message"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/BuploadFilesHOD"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@android:drawable/checkbox_off_background"
                android:text="Upload Files"
                android:textAllCaps="false" />

            <Spinner
                android:id="@+id/Spinnerselectacademicyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/ETwritePostHOD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:ems="10"
                android:hint="Write Post..."
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/BpostHOD"
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ETwritePostHOD"
                android:layout_marginTop="14dp"
                android:background="@android:drawable/checkbox_off_background"
                android:onClick="writePost"
                android:text="Post"
                android:textAllCaps="false" />

        </RelativeLayout>

        <ListView
            android:id="@+id/LVPostHOD"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
