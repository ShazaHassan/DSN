<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/L1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.example.android.dsn.Login">

    <LinearLayout

        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529">

        <RelativeLayout
            android:id="@+id/R1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/Tvfohu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="FOHU"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="70sp"
                android:textStyle="italic"
                tools:text="FOHU"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/Tvdepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Computers Engineering Department"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:textStyle="italic"
                tools:text="Computers Engineering Department"
                android:layout_below="@+id/Tvfohu"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/ETUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:background="@android:drawable/alert_light_frame"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Username :"
                android:inputType="textPersonName"
                android:layout_below="@+id/Tvdepartment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/ETPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ETUsername"
                android:layout_alignStart="@+id/ETUsername"
                android:layout_below="@+id/ETUsername"
                android:layout_marginTop="24dp"
                android:background="@android:drawable/alert_light_frame"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Password:"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/BLogin"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:onClick="Login"
                android:text="Login"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="38dp" />

            <RadioGroup
                android:id="@+id/SignAs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ETPass"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp">

                <RadioButton
                    android:id="@+id/RBDr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/RBHOD"
                    android:layout_alignStart="@+id/RBHOD"
                    android:layout_below="@+id/RBHOD"
                    android:layout_weight="1"
                    android:text="Dr" />

                <RadioButton
                    android:id="@+id/RBHOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/RBStudent"
                    android:layout_alignStart="@+id/RBStudent"
                    android:layout_below="@+id/RBStudent"
                    android:layout_weight="1"
                    android:text="HOD" />

                <RadioButton
                    android:id="@+id/RBStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ETPass"
                    android:layout_weight="1"
                    android:text="Student" />
            </RadioGroup><![CDATA[

            android:layout_marginBottom="12dp"
                android:text="Made with love and lots of code " />

        ]]>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
