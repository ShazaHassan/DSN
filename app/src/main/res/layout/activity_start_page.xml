<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dsn.StartPage">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF20B2AA">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:text="FOHU"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="50sp"
                android:textStyle="italic"
                tools:text="FOHU" />

            <TextView
                android:id="@+id/teach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Computers Engineering Department"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:textStyle="italic"
                tools:text="Computers Engineering Department" />

            <Button
                android:id="@+id/LogBotton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teach"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66dp"
                android:layout_weight="1"
                android:onClick="GoToLogin"
                android:text="Login" />

            <Button
                android:id="@+id/RegBotton"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/LogBotton"
                android:layout_alignStart="@+id/LogBotton"
                android:layout_below="@+id/LogBotton"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:onClick="GoToRegisteration"
                android:text="Registeration" />

            <TextView
                android:id="@+id/MyToch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:text="Made with love and lots of code " />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
