<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dsn.ResetPassword"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:background="#FF20B2AA">

        <TextView
            android:id="@+id/Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset your password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="35sp"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp" />

        <Button
            android:id="@+id/passBotton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Reset"
            android:layout_alignRight="@+id/Reset"
            android:layout_below="@+id/pass2"
            android:layout_marginTop="55dp"
            android:onClick="GoToLogin"
            android:text="Reset password" />

        <TextView
            android:id="@+id/Mytouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:text="Made with love and lots of code "
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/Reset"
            android:layout_alignStart="@+id/Reset"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:hint="Enter you email:"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/Reset"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText2"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter a new password:"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/newPass"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="repeat your password:"
            android:inputType="numberPassword" />
    </RelativeLayout>
</LinearLayout>

