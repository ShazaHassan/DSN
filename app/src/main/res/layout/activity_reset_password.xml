<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/L1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.example.android.dsn.ResetPassword"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/TvReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Reset your password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="35sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/Bpassword"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ETrepeatpassword"
            android:layout_marginTop="34dp"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="GoToLogin"
            android:text="Reset password"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/ETmail"
            style="@style/Base.Animation.AppCompat.Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TvReset"
            android:layout_marginTop="64dp"
            android:background="@android:drawable/alert_light_frame"
            android:ems="10"
            android:hint="Email:"
            android:inputType="textEmailAddress"
            android:textEditNoPasteWindowLayout="@android:drawable/bottom_bar" />

        <EditText
            android:id="@+id/ETpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ETmail"
            android:background="@android:drawable/alert_light_frame"
            android:ems="10"
            android:hint="New Password:"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/ETrepeatpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ETpassword"
            android:background="@android:drawable/alert_light_frame"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Repeat Password:"
            android:inputType="numberPassword" />

        <TextView
            android:id="@+id/TvMytouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:text="Made with love and lots of code " />
    </RelativeLayout>
</LinearLayout>

