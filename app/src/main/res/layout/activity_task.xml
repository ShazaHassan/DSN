<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.dsn.TaskPageForDoctors">
    Public EditText mEditText;
    Public Button mButton;

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="13dp"
                            android:text="(subject name) Tasks"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="30sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/Addtask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/Bupload"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:text="Add new task:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="20sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="135dp" />

                        <EditText
                            android:id="@+id/no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/textView5"
                            android:layout_marginTop="59dp"
                            android:ems="10"
                            android:hint="Task No.:"
                            android:inputType="textPersonName"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView10"
                            android:layout_alignBottom="@+id/textView10"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:hint="Description:"
                            android:inputType="textMultiLine"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/dead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView14"
                            android:layout_alignBottom="@+id/textView14"
                            android:layout_alignEnd="@+id/BAnswers"
                            android:layout_alignRight="@+id/BAnswers"
                            android:ems="10"
                            android:hint="Deadline:"
                            android:inputType="textPersonName"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/BAddTask"
                            android:layout_width="138dp"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/dead"
                            android:layout_alignRight="@+id/dead"
                            android:layout_below="@+id/dead"
                            android:layout_marginTop="15dp"
                            android:onClick="AddNewTask"
                            android:text="Add Task"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/no"
                            android:layout_marginTop="11dp"
                            android:text="Descripion:"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/des"
                            android:layout_marginTop="10dp"
                            android:text="Deadline:"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />
                        //android:textAlignment="viewStart"


                        <Button
                            android:id="@+id/Bupload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/textView5"
                            android:layout_marginTop="14dp"
                            android:text="Upload Answer" />

                        <Button
                            android:id="@+id/BAnswers"
                            android:layout_width="138dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/Bupload"
                            android:layout_alignBottom="@+id/Bupload"
                            android:layout_alignLeft="@+id/Bupload"
                            android:layout_alignStart="@+id/Bupload"
                            android:onClick="GoToAnswersPage"
                            android:text="Answers" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/writtenpost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
