<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dsn.Task">
    Public EditText mEditText;
    Public Button mButton;

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

              <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="13dp"
                    android:text="task"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="30sp"
                    android:textStyle="bold|italic"
                    tools:text="(subject name) Tasks" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="43dp"
                    android:onClick="VisibleInputText"
                    android:text="New Task"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/no"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/button2"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/des"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/no"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/dead"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/des"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:visibility="visible" />

                  <Button
                      android:id="@+id/Subbmit"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignEnd="@+id/button2"
                      android:layout_alignRight="@+id/button2"
                      android:layout_below="@+id/dead"
                      android:layout_marginTop="28dp"
                      android:onClick="AddNewTask"
                      android:text="Subbmit"
                      android:visibility="visible" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/des"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/des"
                    android:layout_toStartOf="@+id/des"
                    android:text="Descripion:"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dead"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Deadline:"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    />
                  //android:textAlignment="viewStart"


                  <TextView
                      android:id="@+id/textView16"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/no"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:text="Task Num.:"
                      android:textSize="23sp"
                      android:textStyle="bold"
                      android:visibility="visible"
                      tools:layout_editor_absoluteX="8dp"
                      tools:layout_editor_absoluteY="169dp" />

            </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/writtenpost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
